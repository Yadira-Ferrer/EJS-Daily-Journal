<%- include("partials/header") %>
<h1>Home</h1>
<p><%= homeContent %></p>
<% posts.forEach(post => { %>
<div>
  <h2><%= post.title %></h2>
  <p>
    <% if (post.content.length > 99 ) { %>
      <%= post.content.substring(0, 100) + ' ...' %>  
      <a href="/posts/<%=post.title.replace(" ", "-").toLowerCase()%>">Read More</a>
    <% } else { %>
      <%= post.content %>
    <% }  %>  
  </p>
</div>
<% }); %>
<!-- Footer -->
<%- include("partials/footer") %>
